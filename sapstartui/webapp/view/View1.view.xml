<mvc:View controllerName="sapstartui.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m" xmlns:f="sap.f" 	xmlns:w="sap.ui.integration.widgets">
    <Page id="page" title="{i18n>title}">
        <content>
        	<f:GridContainer class="grid1">
					<f:layout>
						<f:GridContainerSettings rowSize="5rem" columnSize="5rem" gap="1rem" />
					</f:layout>
					<f:layoutS>
						<f:GridContainerSettings rowSize="5rem" columnSize="5rem" gap="0.5rem" />
					</f:layoutS>
					<w:Card manifest="{manifests>/list1}" action="onAction">
						<w:layoutData>
							<f:GridContainerItemLayoutData minRows="4" columns="4" />
						</w:layoutData>
					</w:Card>
				</f:GridContainer>
        </content>
    </Page>
</mvc:View>
